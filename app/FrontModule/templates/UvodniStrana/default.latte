<script>
    function showCategory(categoryId) {
        var products = document.getElementById('category-'+categoryId);
        document.getElementById('category-button-'+categoryId).className = 'product-detail-selected';
        var products_div = document.getElementById('products-div');

        products_div.removeChild(products_div.childNodes[0]);
        products_div.appendChild(products);
        products.setAttribute('data-products-div-child', 'selected');
    }
</script>